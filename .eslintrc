{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "globals": {
      "fetch": true,
      "document": true,
      "window": true,
      "requestAnimationFrame": true,
      "cancelAnimationFrame": true
    },
    "settings": {
      "ecmaVersion": 9,
      "import/parser": "babel-eslint",
      "react": {
        "pragma": "React",
        "version": "16.3"
      },
      "import/resolver": {
          "node": {
            "paths": ["src"]
          },
          "webpack": {
            "config": "webpack.config.js",
            "extensions": [
              ".js",
              ".jsx"
            ]
          }
      }
    },
    "env" : {
      "node" : true,
      "browser": true,
      "es6": true
    },
    "rules": {
      "indent": ["error", 4],
      "react/jsx-indent": ["enabled", 4],
      "react/jsx-indent-props": ["enabled", 4],
      "no-underscore-dangle": "off",
      "arrow-parens": "off",
      "jsx-a11y/click-events-have-key-events": "off",
      "jsx-a11y/no-noninteractive-element-interactions": "off",
      "consistent-return": "off"
    }
  }
